<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <servlet>
    <servlet-name>SearchServlet</servlet-name>
    <servlet-class>com.zhongxun.servlet.SearchServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SearchWebServlet</servlet-name>
    <servlet-class>com.zhongxun.servlet.SearchWebServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ReadConfigFileServlet</servlet-name>
    <servlet-class>com.zhongxun.servlet.ReadConfigFileServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShowIndexServlet</servlet-name>
    <servlet-class>com.zhongxun.servlet.ShowIndexServlet</servlet-class>
  </servlet>
  <servlet>
